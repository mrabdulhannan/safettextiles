<!-- service.liquid -->
{%- if section.settings.enablesection -%}
<div class="customstyle{{ section.id }} " data-aos={{section.settings.animation}} >
    {%- include 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      {%- include 'section-heading' -%}
      <div class="services-wrapper dots-negative">
        <div class="services-slider row mb-0" id="service-list-{{ section.id }}"
             data-rows="{{section.settings.rows}}"
             data-slidesToShow="{{section.blocks.size}}"
             data-slidestoscroll="{{section.blocks.size}}"
             data-arrows="{{ section.settings.arrows }}"
             data-dots="{{ section.settings.dots }}" 
             data-draggable="{{ section.settings.draggable }}" 
             data-infinite="{{ section.settings.infinite }}" 
             data-section-id="{{ section.id }}" 
             data-section-type="slickCarousels">
          {%- for block in section.blocks -%}
          <div class="col services-item carousel__slide-wrapper--{{block.id}}" {{ block.shopify_attributes }}>
            {%- case section.settings.layout -%}
            {%- when 'style-1' -%}
            <div class="media service-1 text-left">
              <span class=" mr-4 iconx8" style="color:{{section.settings.iconcolor}};">
                {{block.settings.icon | default:'[[ Icon ]]'}}
              </span>
              <div class="media-body">
                <h6 class="mt-0 mb-2 h4" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
                <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
              </div>
            </div>
            {%- when 'style-2' -%}
            <div class="media service-2 text-center">
              <div class="media-body">
                  <div class="mb-4 iconx8" style="color:{{section.settings.iconcolor}};">
                  {{block.settings.icon | default:'[[ Icon ]]'}}
                </div>
                  <h6 class="mt-0 mb-4 h4 text-uppercase" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
                <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
              </div>
            </div>
            {%- when 'style-3' -%}
            <div class="media service-3 text-center">
              <div class="media-body">
                <h6 class="mt-0 mb-2 text-theme h4">
                  <span class="mr-1 iconx8" style="color:{{section.settings.iconcolor}};">
                    {{block.settings.icon | default:'[[ Icon ]]'}}
                  </span>
                  <div style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</div>
                </h6>
                <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
              </div>
            </div>
            {%- endcase -%}
          </div>
          {%- endfor -%}
        </div>
      </div>
      {%- if section.blocks.size == 0 -%}
      {%- include 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
  </div>
{%- endif -%}
