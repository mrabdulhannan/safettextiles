              "label": "41.67%"
            },
            {
              "value": "6",
              "label": "50%"
            },
            {
              "value": "7",
              "label": "58.33%"
            },
            {
              "value": "8",
              "label": "66.67%"
            },
            {
              "value": "9",
              "label": "75%"
            },
            {
              "value": "10",
              "label": "83.33%"
            },
            {
              "value": "12",
              "label": "100%"
            }
          ]
        },
          {
            "type": "textarea",
            "id": "description",
            "label": "HTML / Description",
            "default": "<h3 class='mb-2'>Banner title</h3><p>Lorem ipsum dolor sit amet</p>",
            "info":"ðŸ’¡ [HTML Buider.](https:\/\/ap2020.myshopify.com\/pages\/html-builder)"
          },
          {
            "type": "color",
            "id": "bg_color",
              "label": "Background Description",
              "default": "#fefefe"
          },
          {
            "type": "color",
            "id": "bg_colorhover",
              "label": "Background Description Hover",
              "default": "#f4a678"
          },
          {
            "type": "color",
            "id": "colorhover",
              "label": "Color Description Hover",
              "default": "#ffffff"
          },
          {
            "type": "range",
            "id": "opacity_bg",
            "min": 0,
            "max": 1,
            "step": 0.1,
            "unit": "opa",
            "label": "Desciption max width",
            "default": 0
          },
          {
            "type": "range",
            "id": "max-width",
            "min": 280,
            "max": 800,
            "step": 10,
            "unit": "px",
            "label": "Desciption max width",
            "default": 290
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "View more"
