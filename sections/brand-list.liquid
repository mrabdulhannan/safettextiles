              </a>
              {%- else -%}
              <div class="image-block__image">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              {%- endif -%}
            </div>
          </div>
        </div>
        {%- endfor -%}
      </div>

      {%- if section.blocks.size == 0 -%}
      {%- include 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
</div>
